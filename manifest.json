{
	"manifest_version": 2,
	"name": "Time Tracker",
	"version": "0.1",
	"description": "Keeps track of how much time you spend on various web sites.",

	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},

	"permissions": [
		"tabs"
	],

	"browser_action": {
    "default_icon": "lifemeterlogo8080.png",
    "default_popup": "viewcharts.html"
	},

	"icons": { "128": "lifemeterlogo8080.png" },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
